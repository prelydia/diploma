@model diploma.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Surname"> Фамилия </label><br />
            <input type="text" asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Name"> Имя</label><br />
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Patronymic"> Отчество</label><br />
            <input type="text" asp-for="Patronymic" class="form-control" />
            <span asp-validation-for="Patronymic" />
        </div>
        <div>
            <label asp-for="Email"> Почта </label><br />
            <input type="email" pattern="^[_A-Za-z0-9-\+]+(\.[_A-Za-z0-9-]+)*&#64;[A-Za-z0-9-]+(\.[A-Za-z0-9]+)*(\.[A-Za-z]{2,})$" asp-for="Email" class="form-control" required/>
            <div class="invalid-feedback">
                Пожалуйста, введите корректный email.
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Role.Id"> Роль </label><br />
            <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
            <select asp-for="Role.Id"
                    class="form-control"
                    asp-items="@(new SelectList(ViewBag.Roles,"Value", "Text"))">
                <option value="" disabled selected> Выберите роль </option>
            </select>
        </div>
        <div>
            <label asp-for="Login"> Логин</label><br />
            <input type="text" asp-for="Login" class="form-control" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password"> Пароль</label><br />
            <input asp-for="Password" pattern="^[0-9a-zA-Z!&#64;#$%^&*]{6,}$" class="form-control" required />
            <div class="invalid-feedback">
                Пожалуйста, введите пароль!
            </div>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" class="btn btn-primary" />
        </div>
    </div>
</form>

@{
}
<form asp-action="edit" asp-controller="file" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Id" class="control-label"> ID </label>
        <input type="text" asp-for="Id" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"> Дата создания </label>
        <input type="datetime" asp-for="Date" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"> Название </label>
        <input type="text" asp-for="Name" value="@ViewBag.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label"> Id автора </label>
        <input type="text" asp-for="AuthorId" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <label asp-for="Path" class="control-label"> Путь к файлу </label>
        <input type="text" asp-for="Path" class="form-control" readonly="@(true)" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>
